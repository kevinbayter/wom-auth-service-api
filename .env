# Environment Variables - Auth Service API
# This file is versioned for development purposes

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wom_auth_db
DB_USERNAME=wom_user
DB_PASSWORD=wom_password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_ACCESS_TOKEN_EXPIRATION=900000          # 15 minutes in milliseconds
JWT_REFRESH_TOKEN_EXPIRATION=604800000      # 7 days in milliseconds
JWT_PRIVATE_KEY_PATH=classpath:keys/private_key.pem
JWT_PUBLIC_KEY_PATH=classpath:keys/public_key.pem

# Security Configuration
MAX_LOGIN_ATTEMPTS=5
ACCOUNT_LOCK_DURATION=30                    # minutes
CORS_ALLOWED_ORIGINS=http://localhost:4200,http://localhost:3000

# Server Configuration
SERVER_PORT=8080
SPRING_PROFILES_ACTIVE=dev
